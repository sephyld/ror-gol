<div class="flex flex-col gap-16">
  <h2 class="text-4xl font-bold">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-8">
      <div class="flex flex-col gap-2">
        <%= f.label :email, class: "font-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "focus:border focus:border-slate-500 rounded-xl" %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label :password,class: "font-semibold" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "focus:border focus:border-slate-500 rounded-xl" %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label :password_confirmation, class: "font-semibold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "focus:border focus:border-slate-500 rounded-xl" %>
      </div>
      <div class="flex flex-row gap-4 justify-end">
        <%= link_to "<- Log in", new_session_path(resource_name), class: "btn w-full" %>
        <%= f.button "Sign up", class: "btn w-full" %>
      </div>
    </div>
  <% end %>
</div>