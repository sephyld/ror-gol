  <%= turbo_stream.replace "grid_turbo_frame_tag" do %>
  <%= turbo_frame_tag "grid_turbo_frame_tag" do %>
    <div data-controller="play" class="grid grid-cols-6 justify-center gap-2">
      <div class="flex flex-col gap-4 p-8 mb-8 col-span-6 lg:col-span-2">
        <h3 class="text-lg font-semibold">Legend</h3>
        <div class="flex flex-row gap-4 justify-start">
          <div class="w-12 h-12 bg-black border border-black"></div>
          <div>Alive cell</div>
        </div>
        <div class="flex flex-row gap-4 justify-start">
          <div class="w-12 h-12 bg-white border border-black"></div>
          <div>Dead cell</div>
        </div>
        <button id="play-button" data-action="click->play#togglePlay" data-play-target="button" class="mt-8 rounded-lg bg-slate-600 text-white px-8 py-4 text-lg">
          >
        </button>
      </div>
      <div class="flex flex-row justify-center gap col-span-6 lg:col-span-4">
        <%= turbo_frame_tag "canvas" do %>
          <%= render "games_of_life/form" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
